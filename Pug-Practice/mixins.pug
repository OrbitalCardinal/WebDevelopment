mixin comment(commentData)
    .comment 
        if commentData.postedByAdmin
            em (Posted by admin)
        .date= commentData.date
        .author= commentData.author
        .text=  commentData.text

doctype html
html    
    head
        title mixings
        style. 
            .comment {
                font-family: sans-serif;
                line-height: 1.5;
                padding: 10px;
                border: 1px solid #555;
                width: 250px;
            }

            .date {
                font.size: 85%;
                text-align: right
            }

            .author {
                font-size: 110%;
                font-weight: bold;
                font-size: 100%;
            }
    body
        - let c = {postedByAdmin: true, date: "04-02-2018", author: "dcode", text:"Great Tutorial"}
        +comment(c)
        - let c1 = {date: "07-02-2020", author: "Orbital", text:"Lol"}
        +comment(c1)

